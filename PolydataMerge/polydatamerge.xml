<?xml version="1.0" encoding="utf-8"?>

<executable>
	<title>PolyData Merge (DTIProcess)</title>
	<category>Diffusion.Tractography</category>
	<description>Merges two VTK PolyData files together</description>
	<contributor>Gwendoline Roger, Francois Budin</contributor>
	<version>1.0.0</version>
	<parameters>
		<label>Input/Output</label>
		<description>Add two VTK PolyData files</description>
		<geometry type="fiberbundle">
			<name>fiberFile1</name>
			<flag>-f</flag>
			<longflag>--vtkFile1</longflag>
			<label>Input VTK PolyData 1</label>
			<channel>input</channel>
			<description>First input vtk PolyData (Fibers)</description>
		</geometry>
		<geometry type="fiberbundle">
			<name>fiberFile2</name>
			<flag>-g</flag>
			<longflag>--vtkFile2</longflag>
			<label>Input VTK PolyData 2</label>
			<channel>input</channel>
			<description>Second input VTK PolyData (Fibers)</description>
		</geometry>
		<geometry type="fiberbundle">
			<name>fiberOutput</name>
			<longflag>--vtk_output</longflag>
			<flag>o</flag>
			<label>VTK PolyData (Fibers) Output</label>
			<description>Output VTK PolyData (Fibers) file</description>
			<channel>output</channel>
		</geometry>
	</parameters>
</executable>
